# This script prints the active window title for use with MATE's Command Applet,
# See ~/.config/dconf-autoload/mate-panel-00.cfg for configuration.


# What to print if there's no active window.
: ${WTH_DEFAULT_TEXT:=Desktop}

# The Command Applet's maximum byte count, divided by the max number of bytes
# per character (4). See https://github.com/mate-desktop/mate-applets/issues/374
: ${WTH_MAX_CHARS:=15}

# What to put at the end of the title if it's truncated.
: ${WTH_TRUNCATION_MARKER:=â€¦}


command -v xdotool > /dev/null || exit 1


# Truncates its first line of input as configured above.
truncate() {
  local in
  IFS= read -r in
  if (( "${#in}" <= "${WTH_MAX_CHARS}" )); then
    printf '%s\n' "${in}"
  else
    printf '%s%s\n' \
        "${in: 0 : ${WTH_MAX_CHARS} - ${#WTH_TRUNCATION_MARKER}}" \
        "${WTH_TRUNCATION_MARKER}"
  fi
}


if title="$(xdotool getactivewindow getwindowname 2> /dev/null)"; then
  printf '%s' "$title" | truncate
else
  printf '%s' "${WTH_DEFAULT_TEXT}" | truncate
fi
