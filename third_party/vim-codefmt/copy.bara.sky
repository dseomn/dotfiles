load("//.local/lib/dotfiles/third_party", "third_party_workflow")


third_party_workflow(
    origin = git.github_origin(
        url = "https://github.com/google/vim-codefmt",
        ref = "master",
    ),
    origin_files = glob(
        include = [
            "*/**",
            "LICENSE",
            "README.md",
            "addon-info.json",
        ],
        exclude = [
            ".github/**",
            "vroom/**",
        ],
    ),
    destination_root = "third_party/vim-codefmt",
)
