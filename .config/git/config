[user]
	email = david@mandelberg.org
	name = David Mandelberg

[alias]
	# TODO: Once aliases can call other aliases, reduce duplication:
	# https://github.com/git/git/commit/506ee60d222f94a1598769feaba3b3621bd9fa1a

	# log
	r = log --pretty=fuller --stat -p --reverse
	rin = log --pretty=fuller --stat -p --reverse ..@{upstream}
	rout = log --pretty=fuller --stat -p --reverse @{push}..
	g = log --pretty=shorter --graph --boundary
	gin = log --pretty=shorter --graph --boundary ..@{upstream}
	gout = log --pretty=shorter --graph --boundary @{push}..
	ginout = "! \
		: log && \
		cd \"${GIT_PREFIX}\" && \
		all=\"@{push} @{upstream} HEAD\" && \
		bases=\"$(git merge-base --all --octopus ${all})\" && \
		git g ${all} --not ${bases}"

	# commit
	amend = commit --amend -C HEAD
	reword = commit --amend -c HEAD --only

	# diff
	d = diff

	# status
	st = status

[pretty]
	shorter = tformat:%C(auto)%h %ae %C(blue)%ar%C(auto)%d%n%s

[color]
	ui = true

[diff]
	mnemonicPrefix = true
	renames = true
	algorithm = histogram
	colorMoved = true

[status]
	showStash = true

[push]
	default = upstream

[merge]
	conflictStyle = diff3

[rebase]
	autoSquash = true
	missingCommitsCheck = error

[core]
	logAllRefUpdates = always

[transfer]
	fsckObjects = true

[url "ssh://git@github.com/"]
	pushInsteadOf = https://github.com/

[url "ssh://git@gitlab.freedesktop.org/"]
	pushInsteadOf = https://gitlab.freedesktop.org/

[url "ssh://git@gitlab.gnome.org/"]
	pushInsteadOf = https://gitlab.gnome.org/

[include]
	path = config.local
