[user]
	email = david@mandelberg.org
	name = David Mandelberg

[alias]
	# TODO: Once aliases can call other aliases, reduce duplication:
	# https://github.com/git/git/commit/506ee60d222f94a1598769feaba3b3621bd9fa1a

	# log
	in = log --pretty=fuller -p --reverse ..@{u}
	out = log --pretty=fuller -p --reverse @{u}..
	sin = log --pretty=shorter --graph --boundary ..@{u}
	sout = log --pretty=shorter --graph --boundary @{u}..
	sinout = log --pretty=shorter --graph --boundary @{u}...

	# commit
	amend = commit --amend -C HEAD
	reword = commit --amend -c HEAD --only

[pretty]
	shorter = format:%C(auto)%h %C(blue)%ai%C(auto) %ae%d%n%s%n

[color]
	ui = true

[diff]
	mnemonicPrefix = true
	renames = true
	algorithm = histogram
	colorMoved = true

[status]
	showStash = true

[push]
	default = upstream

[merge]
	conflictStyle = diff3

[rebase]
	autoSquash = true
	missingCommitsCheck = error

[core]
	logAllRefUpdates = always

[transfer]
	fsckObjects = true

[include]
	path = config.local
