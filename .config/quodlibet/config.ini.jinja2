[__config__]
version = 0

[albumart]
filename = folder.png
force_filename = true
prefer_embedded = false

[browsers]
background =
cover_size = -1
{{ copy('browsers', 'covergrid') }}
covergrid_all = false
covergrid_magnification = 6.0
covergrid_pos = 0.5
covergrid_wide = true
pane_mode = 0
{{ copy('browsers', 'pane_selection') }}
panedbrowser_pane_widths = 0.333333,0.5
panedbrowser_pos = 0.25
panes = genre	~people	album
{{ copy('browsers', 'query_text') }}
rating_click = false
rating_confirm_multiple = true

[editing]
alltags = true
auto_save_changes = false
save_to_songs = false
split_on =

[library]
refresh_on_start = false

[memory]
{% for option in (config['memory'] if 'memory' in config else {})
    if ('_' + option).endswith((
        '_last_active_version',
        '_maximized',
        '_pos',
        '_position',
        '_size',
        '_size_',
        '_size_single',
    )) and option not in (
        'queue_position',
        'sidebar_pos',
    )
%}
{{ copy('memory', option) }}
{% endfor %}
browser = {{ config.get('memory', 'browser', fallback='CoverGrid') }}
{{ copy('memory', 'chooser_dir') }}
{{ copy('memory', 'open_browsers') }}
{{ copy('memory', 'plugin_selection') }}
{{ copy('memory', 'prefs_page') }}
queue = True
queue_disable = False
queue_expanded = True
queue_keep_songs = True
queue_position = 0.5
repeat = False
{{ copy('memory', 'seek') }}
shuffle = False
shufflequeue = false
sidebar_pos = 1.0
{{ copy('memory', 'song') }}
sortby = 0album
volume = 1.0

[player]
{{ copy('player', 'is_playing') }}
pre_amp_gain = -5.0
replaygain = true
replaygain_mode = auto

[plugins]
active_plugins =
  APEv2 to ID3v2
  QLScrobbler
  Regex Substitution
  ReplayGain
  View Lyrics
  WaveformSeekBar
  Website Search
  mpris
  refresh-songs
quodlibet.fake.plugins.waveformseekbar_show_current_pos = True
quodlibet.fake.plugins.waveformseekbar_show_time_labels = False
{{ copy('plugins', 'scrobbler_password') }}
scrobbler_scrobbler_offline = False
scrobbler_service = Otherâ€¦
scrobbler_url = https://post.audioscrobbler.com/
scrobbler_username = dseomn

[rename]
ascii = false
diacriticals = false
lowercase = false
spaces = false
windows = false

[settings]
columns = ~#disc,~#track,title,artist,album,genre,~#length
eager_search = false
jump = false
scan = {{ env['HOME'] }}/Music/default-profile
