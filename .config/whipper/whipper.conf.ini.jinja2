[whipper]
eject = never

[whipper.cd.rip]
prompt = True
working_directory = ~/Music/archive/cd
track_template = %%A/%%d/d%%Nt%%t. %%a - %%n
disc_template = %%A/%%d/d%%Ns01
unknown = True
cdr = True
keep_going = True

{% for section in config.sections() if section.startswith('drive:') -%}
[{{ section }}]
{% for option in config[section] -%}
{{ copy(section, option) -}}
{% endfor -%}
{% endfor %}
